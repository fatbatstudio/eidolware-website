---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Devlog - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="max-w-site w-full">
      <section class="border-cyber-purple mb-12 border-b-2 py-12 text-center">
        <h1 class="mb-4 text-6xl">Monthly Devlog</h1>
        <p class="text-cyber-gray m-0 text-xl">
          Development updates and behind-the-scenes insights
        </p>
      </section>

      <section>
        <ul class="m-0 flex list-none flex-wrap gap-8 p-0">
          {
            posts.map((post, index) => (
              <li
                class={
                  index === 0 ? "mb-4 w-full text-center" : "w-[calc(50%-1rem)]"
                }
              >
                <a
                  href={`/blog/${post.id}/`}
                  class="block no-underline transition-all duration-200"
                >
                  {post.data.heroImage && (
                    <Image
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt=""
                      class="mb-2 rounded-xl"
                    />
                  )}
                  <h4
                    class={
                      index === 0
                        ? "title-first text-cyber-cyan m-0 leading-none"
                        : "title text-cyber-cyan m-0 leading-none"
                    }
                  >
                    {post.data.title}
                  </h4>
                  <p class="date text-cyber-gray m-0">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .title {
    font-size: 1.563rem;
  }

  .title-first {
    font-size: 2.369rem;
  }

  .title-first + .date {
    font-size: inherit;
  }

  a:hover h4,
  a:hover .date {
    color: #b1ffec !important;
    text-shadow:
      0 0 10px rgba(177, 255, 236, 0.8),
      0 0 20px rgba(177, 255, 236, 0.6),
      0 0 30px rgba(177, 255, 236, 0.4);
  }

  a:hover img {
    box-shadow:
      0 2px 6px rgba(109, 31, 104, 0.3),
      0 8px 24px rgba(177, 255, 236, 0.2),
      0 0 40px rgba(109, 31, 104, 0.4);
  }

  li:first-child img {
    width: 100%;
  }

  @media (max-width: 720px) {
    ul {
      gap: 0.5em !important;
    }

    li {
      width: 100% !important;
      text-align: center !important;
    }

    li:first-child {
      margin-bottom: 0 !important;
    }

    .title-first {
      font-size: 1.563em !important;
    }
  }
</style>
