---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";
import fatbatLogo from "../assets/logos/fatbat_logo.png";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`About - ${SITE_TITLE}`}
      description="About FATBAT Studio, the creators of EIDOLWARE"
    />
  </head>
  <body>
    <Header />
    <main class="about-main">
      <!-- Hero -->
      <section class="hero">
        <div class="hero-bg">
          <div class="hero-grid"></div>
          <div class="glow glow-pink"></div>
          <div class="glow glow-cyan"></div>
          <div class="scanlines"></div>
        </div>

        <div class="hero-inner">
          <div class="hero-top-bar">
            <span class="bar-label">EIDOLWARE //</span>
            <span class="bar-jp">ファットバット</span>
          </div>

          <Image
            src={fatbatLogo}
            alt="FATBAT Studio"
            width={280}
            height={280}
            class="logo-img"
            loading="eager"
          />
          <h1 class="hero-title">FATBAT Studio</h1>
          <div class="tagline">
            <div class="tag-line"></div>
            <span class="tag-text">Independent Game Development</span>
            <div class="tag-line"></div>
          </div>
        </div>

        <div class="hero-stripe">
          <div class="stripe-pink"></div>
          <div class="stripe-cyan"></div>
        </div>
      </section>

      <!-- Who We Are -->
      <section class="content-section">
        <div class="section-head">
          <div class="num-block num-pink">
            <span class="num">01</span>
          </div>
          <div class="head-text">
            <span class="head-jp">私たちについて</span>
            <h2 class="head-title">Who We Are</h2>
          </div>
          <div class="head-rule"></div>
        </div>

        <div class="section-body">
          <p>
            FATBAT Studio is an indie art collective specializing in satire.
            EIDOLWARE marks our debut in game development, bringing our passion
            for absurd storytelling into interactive form.
          </p>
        </div>
      </section>

      <!-- Current Project -->
      <section class="content-section">
        <div class="section-head">
          <div class="num-block num-cyan">
            <span class="num">02</span>
          </div>
          <div class="head-text">
            <span class="head-jp">現在のプロジェクト</span>
            <h2 class="head-title">Current Project</h2>
          </div>
          <div class="head-rule"></div>
        </div>

        <div class="section-body">
          <p>
            Our flagship title, <strong>EIDOLWARE</strong>, is a cyberpunk
            action RPG set in a surreal 24/7 underground anime convention. The
            game features fast-paced combat and explores themes of AI ethics,
            escapism, and obsession through a cast of memorable characters.
          </p>
          <a href="/" class="project-link">Learn More →</a>
        </div>
      </section>

      <!-- Staff Credits -->
      <section class="content-section">
        <div class="section-head">
          <div class="num-block num-pink">
            <span class="num">03</span>
          </div>
          <div class="head-text">
            <span class="head-jp">スタッフ</span>
            <h2 class="head-title">Staff Credits</h2>
          </div>
          <div class="head-rule"></div>
        </div>

        <div class="section-body">
          <p>Staff credits for EIDOLWARE will be listed here.</p>
          <div class="coming-soon">
            <span>Coming soon…</span>
          </div>
        </div>
      </section>

      <!-- Additional Credits -->
      <section class="content-section">
        <div class="section-head">
          <div class="num-block num-cyan">
            <span class="num">04</span>
          </div>
          <div class="head-text">
            <span class="head-jp">クレジット</span>
            <h2 class="head-title">Additional Credits</h2>
          </div>
          <div class="head-rule"></div>
        </div>

        <div class="section-body">
          <p>
            Thanks to the following people for their contributions to the
            development of EIDOLWARE:
          </p>

          <div class="credits-group">
            <h3 class="credits-heading">Music Artists</h3>
            <ul class="credits-list">
              <li>
                <a
                  href="https://www.fiverr.com/alzha_studio"
                  target="_blank"
                  rel="noopener noreferrer">Alzha Studio</a
                >
              </li>
              <li>
                <a
                  href="https://www.fiverr.com/msoundworks"
                  target="_blank"
                  rel="noopener noreferrer">Msoundworks</a
                >
              </li>
              <li>
                <a
                  href="https://wowsound.com"
                  target="_blank"
                  rel="noopener noreferrer">WOW Sound</a
                >
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Get in Touch -->
      <section class="content-section">
        <div class="section-head">
          <div class="num-block num-pink">
            <span class="num">05</span>
          </div>
          <div class="head-text">
            <span class="head-jp">お問い合わせ</span>
            <h2 class="head-title">Get in Touch</h2>
          </div>
          <div class="head-rule"></div>
        </div>

        <div class="section-body">
          <div class="social-links">
            <a
              href="https://bsky.app/profile/fatbat.studio"
              target="_blank"
              rel="noopener noreferrer"
              class="social-btn"
            >
              <svg viewBox="0 0 24 24" aria-hidden="true" class="social-icon">
                <path
                  fill="currentColor"
                  d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"
                ></path>
              </svg>
              <span>Follow on Bluesky</span>
            </a>
            <a
              href="https://fatbatstudio.itch.io/eidolware"
              target="_blank"
              rel="noopener noreferrer"
              class="social-btn"
            >
              <svg
                viewBox="0 0 245.371 220.736"
                aria-hidden="true"
                class="social-icon"
              >
                <path
                  fill="currentColor"
                  d="M31.99 1.365C21.287 7.72.2 31.945 0 38.298v10.516C0 62.144 12.46 73.86 23.773 73.86c13.584 0 24.902-11.258 24.903-24.62 0 13.362 10.93 24.62 24.515 24.62 13.586 0 24.165-11.258 24.165-24.62 0 13.362 11.622 24.62 25.207 24.62h.246c13.586 0 25.208-11.258 25.208-24.62 0 13.362 10.58 24.62 24.164 24.62 13.585 0 24.515-11.258 24.515-24.62 0 13.362 11.32 24.62 24.903 24.62 11.313 0 23.773-11.714 23.773-25.046V38.298c-.2-6.354-21.287-30.58-31.988-36.933C180.118.197 157.056-.005 122.685 0c-34.37.003-81.228.54-90.697 1.365zm65.194 66.217a28.025 28.025 0 0 1-4.78 6.155c-5.128 5.014-12.157 8.122-19.906 8.122a28.482 28.482 0 0 1-19.948-8.126c-1.858-1.82-3.27-3.766-4.563-6.032l-.006.004c-1.292 2.27-3.092 4.215-4.954 6.037a28.5 28.5 0 0 1-19.948 8.12c-.934 0-1.906-.258-2.692-.528-1.092 11.372-1.553 22.24-1.716 30.164l-.002.045c-.02 4.024-.04 7.333-.06 11.93.21 23.86-2.363 77.334 10.52 90.473 19.964 4.655 56.7 6.775 93.555 6.788h.006c36.854-.013 73.59-2.133 93.554-6.788 12.883-13.14 10.31-66.614 10.52-90.474-.022-4.596-.04-7.905-.06-11.93l-.003-.045c-.162-7.926-.623-18.793-1.715-30.165-.786.27-1.757.528-2.692.528a28.5 28.5 0 0 1-19.948-8.12c-1.862-1.822-3.662-3.766-4.955-6.037l-.006-.004c-1.294 2.266-2.705 4.213-4.563 6.032a28.48 28.48 0 0 1-19.947 8.125c-7.748 0-14.778-3.11-19.906-8.123a28.025 28.025 0 0 1-4.78-6.155 27.99 27.99 0 0 1-4.736 6.155 28.49 28.49 0 0 1-19.95 8.124c-.27 0-.54-.012-.81-.02h-.007c-.27.008-.54.02-.813.02a28.49 28.49 0 0 1-19.95-8.123 27.992 27.992 0 0 1-4.736-6.155zm-20.486 26.49l-.002.01h.015c8.113.017 15.32 0 24.25 9.746 7.028-.737 14.372-1.105 21.722-1.094h.006c7.35-.01 14.694.357 21.723 1.094 8.93-9.747 16.137-9.73 24.25-9.746h.014l-.002-.01c3.833 0 19.166 0 29.85 30.007L210 165.244c8.504 30.624-2.723 31.373-16.727 31.4-20.768-.773-32.267-15.855-32.267-30.935-11.496 1.884-24.907 2.826-38.318 2.827h-.006c-13.412 0-26.823-.943-38.318-2.827 0 15.08-11.5 30.162-32.267 30.935-14.004-.027-25.23-.775-16.726-31.4L46.85 124.08C57.534 94.07