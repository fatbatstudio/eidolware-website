---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";

// Gameplay media (screenshots and YouTube videos)
const gameplayMedia = [
  // Example entries - replace with actual content
  // { type: 'youtube', id: 'VIDEO_ID', title: 'Gameplay Trailer' },
  // { type: 'image', src: '/images/gameplay/screenshot1.jpg', alt: 'Combat scene' },
];

// Artwork images
const artworkImages = [
  // Example entries - replace with actual content
  // { src: '/images/artwork/concept1.jpg', alt: 'Character concept art', title: 'Anna Lam Concept' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Gallery - ${SITE_TITLE}`}
      description="Gameplay footage and artwork from EIDOLWARE"
    />
  </head>
  <body>
    <Header />
    <main>
      <section class="border-cyber-purple mb-12 border-b-2 py-12 text-center">
        <h1 class="mb-4 text-6xl">Gallery</h1>
        <p class="text-cyber-gray m-0 text-xl">Visual showcase of EIDOLWARE</p>
      </section>

      <!-- Gameplay Section -->
      <section class="my-16">
        <h2 class="border-cyber-purple mb-8 border-b pb-4 text-3xl">
          Gameplay
        </h2>
        {
          gameplayMedia.length > 0 ? (
            <div class="grid grid-cols-[repeat(auto-fill,minmax(350px,1fr))] gap-8">
              {gameplayMedia.map((media) => (
                <div class="border-cyber-purple hover:border-cyber-cyan overflow-hidden rounded-lg border bg-black/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(177,255,236,0.2)]">
                  {media.type === "youtube" ? (
                    <div
                      class="relative w-full"
                      style="padding-bottom: 56.25%;"
                    >
                      <iframe
                        class="absolute top-0 left-0 h-full w-full"
                        src={`https://www.youtube.com/embed/${media.id}`}
                        title={media.title}
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                      />
                    </div>
                  ) : (
                    <img
                      src={media.src}
                      alt={media.alt}
                      class="h-auto w-full"
                    />
                  )}
                  {media.title && (
                    <div class="p-4">
                      <p class="text-cyber-cyan m-0 font-semibold">
                        {media.title}
                      </p>
                    </div>
                  )}
                </div>
              ))}
            </div>
          ) : (
            <div class="border-cyber-purple rounded-lg border border-dashed bg-black/30 p-12 text-center">
              <p class="text-cyber-gray m-0 text-xl italic">
                Gameplay footage coming soon...
              </p>
            </div>
          )
        }
      </section>

      <!-- Artwork Section -->
      <section class="my-16">
        <h2 class="border-cyber-purple mb-8 border-b pb-4 text-3xl">Artwork</h2>
        {
          artworkImages.length > 0 ? (
            <div class="grid grid-cols-[repeat(auto-fill,minmax(350px,1fr))] gap-8">
              {artworkImages.map((artwork) => (
                <div class="border-cyber-purple hover:border-cyber-cyan overflow-hidden rounded-lg border bg-black/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(177,255,236,0.2)]">
                  <img
                    src={artwork.src}
                    alt={artwork.alt}
                    class="h-auto w-full"
                  />
                  {artwork.title && (
                    <div class="p-4">
                      <p class="text-cyber-cyan m-0 font-semibold">
                        {artwork.title}
                      </p>
                    </div>
                  )}
                </div>
              ))}
            </div>
          ) : (
            <div class="border-cyber-purple rounded-lg border border-dashed bg-black/30 p-12 text-center">
              <p class="text-cyber-gray m-0 text-xl italic">
                Artwork coming soon...
              </p>
            </div>
          )
        }
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  @media (max-width: 720px) {
    .text-6xl {
      font-size: 2.5rem !important;
    }

    .grid {
      grid-template-columns: 1fr !important;
    }
  }
</style>
