---
import { Image } from "astro:assets";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { SITE_TITLE } from "../../consts";
import { characters } from "../../data/characters";

import annaImg from "../../assets/characters/anna.png";
import susieImg from "../../assets/characters/susie.png";
import fedoraMaskImg from "../../assets/characters/fedora-mask.png";
import beaImg from "../../assets/characters/bea.png";
import jWooImg from "../../assets/characters/j-woo.png";
import mayMelodyImg from "../../assets/characters/may-melody.png";
import jaredImg from "../../assets/characters/jared.png";

const charImages: Record<string, ImageMetadata> = {
  "anna-lam": annaImg,
  "susie-swanson": susieImg,
  "fedora-mask": fedoraMaskImg,
  "bea-beatrix": beaImg,
  "j-woo": jWooImg,
  "may-melody": mayMelodyImg,
  "jared-jimenez": jaredImg,
};

export async function getStaticPaths() {
  return characters.map((character) => ({
    params: { slug: character.slug },
    props: { character },
  }));
}

const { character } = Astro.props;
const isAntagonist = character.type === "antagonist";
const charImage = charImages[character.slug];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${character.name} - ${SITE_TITLE}`}
      description={character.description}
    />
  </head>
  <body>
    <Header />
    <main>
      <div class="character-detail">
        <div class="character-header">
          <a href="/characters" class="back-link">‚Üê Back to Characters</a>
          <h1 class:list={["character-name", { antagonist: isAntagonist }]}>
            {character.name}
          </h1>
          <p class="character-role">{character.role}</p>
        </div>

        <div class="character-content">
          <div class="character-image-large">
            {
              charImage ? (
                <button class="img-trigger" data-lightbox aria-label="View full size image">
                  <Image
                    src={charImage}
                    alt={character.name}
                    width={800}
                    height={1067}
                    class:list={["char-detail-img", { antagonist: isAntagonist }]}
                    loading="eager"
                  />
                  <span class="img-zoom-hint">Click to enlarge</span>
                </button>
              ) : (
                <div
                  class:list={[
                    "character-placeholder",
                    { antagonist: isAntagonist },
                  ]}
                >
                  <span>?</span>
                </div>
              )
            }
          </div>

          {charImage && (
            <div class="lightbox" id="lightbox" aria-hidden="true">
              <button class="lightbox-close" aria-label="Close lightbox">&times;</button>
              <div class="lightbox-backdrop"></div>
              <div class="lightbox-content">
                <Image
                  src={charImage}
                  alt={character.name}
                  width={1600}
                  height={2133}
                  class="lightbox-img"
                  loading="lazy"
                />
              </div>
            </div>
          )}

          <div class="character-info">
            <section class="info-section">
              <h2>Overview</h2>
              {
                (character.bio || character.description)
                  .split("\n\n")
                  .map((paragraph: string) => <p>{paragraph}</p>)
              }
            </section>

            {
              character.abilities && character.abilities.length > 0 && (
                <section class="info-section">
                  <h2>Abilities & Skills</h2>
                  <ul class="abilities-list">
                    {character.abilities.map((ability) => {
                      const [title, ...descParts] = ability.split(" - ");
                      const description = descParts.join(" - ");
                      return (
                        <li>
                          <strong>{title}</strong>
                          {description && <span> - {description}</span>}
                        </li>
                      );
                    })}
                  </ul>
                </section>
              )
            }

            {
              character.background && (
                <section class="info-section">
                  <h2>Background</h2>
                  <p>{character.background}</p>
                </section>
              )
            }
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  .character-detail {
    max-width: 1200px;
    margin: 0 auto;
  }

  .character-header {
    text-align: center;
    padding: 2rem 0 3rem;
    border-bottom: 2px solid var(--cyber-pink);
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--cyber-cyan);
    transition: all 0.3s ease;
  }

  .back-link:hover {
    background-color: rgba(0, 229, 195, 0.1);
    box-shadow: 0 0 10px rgba(0, 229, 195, 0.8), 0 0 20px rgba(0, 229, 195, 0.6), 0 0 30px rgba(0, 229, 195, 0.4);
  }

  .character-name {
    font-size: 3.5rem;
    margin-bottom: 0.5rem;
    color: var(--cyber-cyan);
    text-shadow: 0 0 10px rgba(0, 229, 195, 0.8), 0 0 20px rgba(0, 229, 195, 0.6), 0 0 30px rgba(0, 229, 195, 0.4);
  }

  .character-name.antagonist {
    color: #ff4444;
    text-shadow:
      0 0 10px rgba(255, 68, 68, 0.8),
      0 0 20px rgba(255, 68, 68, 0.6),
      0 0 30px rgba(255, 68, 68, 0.4);
  }

  .character-role {
    font-size: 1.2rem;
    color: var(--cyber-cyan);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 600;
  }

  .character-content {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 3rem;
    align-items: start;
  }

  .character-image-large {
    position: sticky;
    top: 2rem;
    width: 100%;
    overflow: hidden;
  }

  .character-image-large img,
  .char-detail-img {
    width: 100%;
    height: auto;
    object-fit: cover;
    object-position: top center;
    border: 2px solid var(--cyber-pink);
  }

  .char-detail-img.antagonist {
    border-color: #ff4444;
  }

  .character-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      #c0116a 0%,
      #e8157a 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--cyber-pink);
    position: relative;
    overflow: hidden;
  }

  .character-placeholder.antagonist {
    background: linear-gradient(135deg, #8b0000 0%, #4d0000 100%);
    border-color: #8b0000;
  }

  .character-placeholder::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(0, 229, 195, 0.1) 50%,
      transparent 70%
    );
    animation: shine 3s infinite;
  }

  @keyframes shine {
    0% {
      transform: translateX(-100%) translateY(-100%) rotate(45deg);
    }
    100% {
      transform: translateX(100%) translateY(100%) rotate(45deg);
    }
  }

  .character-placeholder span {
    font-size: 8rem;
    font-family: "Bebas Neue", sans-serif;
    color: var(--cyber-cyan);
    text-shadow: 0 0 10px rgba(0, 229, 195, 0.8), 0 0 20px rgba(0, 229, 195, 0.6), 0 0 30px rgba(0, 229, 195, 0.4);
    z-index: 1;
  }

  .character-placeholder.antagonist span {
    color: #ff4444;
    text-shadow:
      0 0 10px rgba(255, 68, 68, 0.8),
      0 0 20px rgba(255, 68, 68, 0.6),
      0 0 30px rgba(255, 68, 68, 0.4);
  }

  .character-info {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .info-section {
    background-color: rgba(0, 0, 0, 0.5);
    border: 1px solid var(--cyber-pink);
    padding: 2rem;
  }

  .info-section h2 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: var(--cyber-cyan);
    border-bottom: 1px solid var(--cyber-pink);
    padding-bottom: 0.75rem;
  }

  .info-section p {
    color: var(--cyber-gray-dark);
    line-height: 1.8;
    font-size: 1.1rem;
    margin: 0 0 1.5rem 0;
  }

  .info-section p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 1024px) {
    .character-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .character-image-large {
      position: relative;
      top: 0;
      max-width: 500px;
      margin: 0 auto;
    }
  }

  @media (max-width: 720px) {
    .character-name {
      font-size: 2.5rem;
    }

    .character-image-large {
      max-width: 100%;
    }

    .character-placeholder span {
      font-size: 5rem;
    }

    .info-section {
      padding: 1.5rem;
    }

    .back-link {
      font-size: 0.8rem;
      padding: 0.6rem 1.2rem;
    }
  }

  /* Image trigger button */
  .img-trigger {
    display: block;
    width: 100%;
    padding: 0;
    border: none;
    background: none;
    cursor: zoom-in;
    position: relative;
  }

  .img-trigger:focus {
    outline: 2px solid var(--cyber-cyan);
    outline-offset: 4px;
  }

  .img-zoom-hint {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0.75rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: var(--cyber-cyan);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .img-trigger:hover .img-zoom-hint,
  .img-trigger:focus .img-zoom-hint {
    opacity: 1;
  }

  /* Lightbox overlay */
  .lightbox {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .lightbox.active {
    opacity: 1;
    visibility: visible;
  }

  .lightbox-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(10, 10, 20, 0.95);
    cursor: zoom-out;
  }

  .lightbox-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    z-index: 10;
    width: 48px;
    height: 48px;
    border: 2px solid var(--cyber-pink);
    background: rgba(10, 10, 20, 0.9);
    color: var(--cyber-cyan);
    font-size: 2rem;
    line-height: 1;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-close:hover {
    background: var(--cyber-pink);
    color: #fff;
    box-shadow: 0 0 20px rgba(232, 21, 122, 0.6);
  }

  .lightbox-content {
    position: relative;
    z-index: 5;
    max-width: 90vw;
    max-height: 90vh;
    animation: lightbox-zoom 0.3s ease;
  }

  @keyframes lightbox-zoom {
    from {
      transform: scale(0.9);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  .lightbox-img {
    max-width: 90vw;
    max-height: 90vh;
    width: auto;
    height: auto;
    object-fit: contain;
    border: 2px solid var(--cyber-pink);
    box-shadow: 0 0 40px rgba(232, 21, 122, 0.4), 0 0 80px rgba(0, 229, 195, 0.2);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const trigger = document.querySelector('[data-lightbox]');
    const lightbox = document.getElementById('lightbox');
    const closeBtn = document.querySelector('.lightbox-close');
    const backdrop = document.querySelector('.lightbox-backdrop');

    if (!trigger || !lightbox) return;

    function openLightbox() {
      lightbox.classList.add('active');
      lightbox.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
      lightbox.classList.remove('active');
      lightbox.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    trigger.addEventListener('click', openLightbox);
    closeBtn?.addEventListener('click', closeLightbox);
    backdrop?.addEventListener('click', closeLightbox);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && lightbox.classList.contains('active')) {
        closeLightbox();
      }
    });
  });
</script>
